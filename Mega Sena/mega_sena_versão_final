import random

limite = int(input("Informe a quantidade de números para iniciar a jogada: "))
jogos = int(input("Informe a quantidade de jogadas: "))
contador_total = {}  # vetor de dicionário
cont_2 = 0
vetor_premiado = []
ganhador = []
num = 0
sena = 6
quantidade_quina = 0
quantidade_quadra = 0

# Gerar números premiados
while len(vetor_premiado) < sena:
    cont_2 += 1
    premiado = random.randint(1, 60)  # numero premiado aleatório de 1 à 60
    if premiado not in vetor_premiado:
        vetor_premiado.append(premiado)  # adicionar números premiados
        vetor_premiado.sort()  # ordenar números
print(f"Números sorteados para o prêmio: {vetor_premiado}")

# Realizar jogadas
for cont in range(jogos):  # loop para rodar a quantidade de jogos
    vetor_1 = []  # vetor de valores (array)
    while len(vetor_1) < sena:  # loop para adicionar os números
        numero = random.randint(1, 60)  # sortear um número aleatório de 1 à 60
        if numero not in vetor_1:  # se o número não estiver no vetor
            vetor_1.append(numero)  # adicionar números no vetor
            vetor_1.sort()  # ordenar os números

    # Verificar correspondências
    coincidencias = len(set(vetor_1) & set(vetor_premiado))
    
    if coincidencias == 6:  # Sena
        ganhador = vetor_1 
        num = cont + 1
    elif coincidencias == 5:  # Quina
        quantidade_quina += 1
    elif coincidencias == 4:  # Quadra
        quantidade_quadra += 1

    for numero in vetor_1:  # atualizar o contador_total
        if numero in contador_total:
            contador_total[numero] += 1
        else:
            contador_total[numero] = 1

# Exibir resultados
print("\nNúmeros que se repetiram (ordenados do maior para o menor):")
for numero, contagem in sorted(contador_total.items(), key=lambda item: item[1], reverse=True):
    if contagem > 1:
        print(f"Número {numero}: {contagem} vez(es)")

print("===== NÚMEROS PREMIADOS =====", vetor_premiado)
if ganhador:
    print(f"Jogada número {num}: {ganhador} (Sena)")
else:
    print("Nenhuma Sena encontrada.")

print(f"Quantidade de Quinas: {quantidade_quina}")
print(f"Quantidade de Quadras: {quantidade_quadra}")
